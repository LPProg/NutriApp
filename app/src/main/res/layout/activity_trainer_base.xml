<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#cb6ce6"> <!-- Fondo morado -->

    <!-- Título de Bienvenida -->
    <TextView
        android:id="@+id/tvTrainerWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido Entrenador"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Botones Centrados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnDietManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Dietas"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnViewUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Usuarios"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensajes"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCalculateIMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular IMC"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnUserRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitudes"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/btnMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</LinearLayout>
