<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#cb6ce6"> <!-- Fondo morado -->

    <!-- Título para el usuario -->
    <TextView
        android:id="@+id/tvUserWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido Usuario"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="32dp" />

    <!-- Botón para seleccionar entrenador -->
    <Button
        android:id="@+id/btnChooseTrainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selección de Entrenador"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver dietas -->
    <Button
        android:id="@+id/btnViewDiets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Dietas"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para actualizar peso -->
    <Button
        android:id="@+id/btnUpdateWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Peso"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para mensajes -->
    <Button
        android:id="@+id/btnMessaging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajes"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver reseñas -->
    <Button
        android:id="@+id/btnReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reseñas"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver el perfil -->
    <Button
        android:id="@+id/btnMyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver notificaciones -->
    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Notificaciones"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />
</LinearLayout>
