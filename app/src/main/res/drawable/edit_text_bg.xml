<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el campo de texto está enfocado -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#E0F7FA" /> <!-- Fondo cuando está enfocado (ligero azul claro) -->
            <stroke android:color="#0097A7" android:width="2dp" /> <!-- Borde más grueso azul -->
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <!-- Estado cuando el campo de texto no está enfocado -->
    <item android:state_focused="false">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco cuando no está enfocado -->
            <stroke android:color="#B0B0B0" android:width="1dp" /> <!-- Borde gris claro -->
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
